<mvc:View
    controllerName="zpoapproval.controller.POApprovalDetail"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.m.semantic"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:upload="sap.m.upload"
    xmlns:u="sap.ui.unified"
>
    <App>
        <pages>
            <Page
                title="Volvo Eicher Commercial Vehicles Purchase Order Approval"
            >
                <content>
                    <Text
                        id="idViewForPOList"
                        visible="false"
                    />
                    <Text
                        id="idPONoTemp"
                        visible="false"
                    />
                    <Text
                        id="idToBeApproved"
                        visible="false"
                    />
                    <Text
                        id="idAlreadyApproved"
                        visible="false"
                    />
                    <Text
                        id="idForRev1Dept"
                        visible="false"
                    />
                    <ObjectHeader visible="false">
                        <statuses>
                            <ObjectStatus id="objPrice" />
                        </statuses>
                        <ObjectAttribute
                            id="objcmp"
                            class="objectattr"
                        />
                    </ObjectHeader>
                    <IconTabBar
                        id="idIconTabBarNoIcons"
                        expandable="false"
                        select="handleIconTabBarSelect"
                        expanded="true"
                        class="sapUiResponsiveContentPadding"
                        stretchContentHeight="true"
                    >
                        <items>
                            <IconTabFilter
                                icon="sap-icon://pdf-attachment"
                                text="Cover Note"
                                key="CoverNote"
                            >
                                <core:HTML id="idFrame" />
                            </IconTabFilter>
                            <IconTabFilter
                                icon="sap-icon://pdf-attachment"
                                text="Purch.Order/Change"
                                key="PurchaseOrder"
                            >
                                <core:HTML id="idFramePO" />
                            </IconTabFilter>
                            <IconTabFilter
                                text="Cost Details"
                                key="Attachments"
                                icon="sap-icon://attachment"
                            >
                                <ScrollContainer
                                    height="100%"
                                    width="100%"
                                    vertical="true"
                                    focusable="true"
                                >

                                
                                </ScrollContainer>
                            </IconTabFilter>
                            <IconTabFilter
                                text="Query History"
                                key="QueryHistory"
                                icon="sap-icon://history"
                            >
                                <Table
                                    id="tblQueryHistor"
                                    items="{path:'/results'}"
                                    inset="false"
                                    growing="true"
                                    growingThreshold="10"
                                    growingScrollToLoad="true"
                                    width="auto"
                                >
                                    <columns>
                                        <Column width="15%">
                                            <Text
                                                text="From"
                                                class="tblHeader"
                                            />
                                        </Column>
                                        <Column width="15%">
                                            <Text
                                                text="To"
                                                class="tblHeader"
                                            />
                                        </Column>
                                        <Column width="15%">
                                            <Text
                                                text="Date and Time"
                                                class="tblHeader"
                                            />
                                        </Column>
                                        <Column
                                            minScreenWidth="Tablet"
                                            demandPopin="true"
                                            width="15%"
                                        >
                                            <Text
                                                text="Status"
                                                class="tblHeader"
                                            />
                                        </Column>
                                        <Column
                                            minScreenWidth="Tablet"
                                            demandPopin="true"
                                        >
                                            <Text
                                                text="Query"
                                                class="tblHeader"
                                            />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem press="onEdit">
                                            <cells>
                                                <Text text="{Query_From}" />
                                                <Text text="{Query_To}" />
                                                <Text
                                                    text="{Query_Date} {Query_Time}"
                                                />
                                                <Text text="{Query_Status}" />
                                                <Text text="{Query}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </IconTabFilter>
                            <IconTabFilter
                                text="Appr.Comments"
                                key="Comments"
                                icon="sap-icon://comment"
                            >
                                <Table
                                    id="tblComments"
                                    items="{path:'/results'}"
                                    inset="false"
                                    growing="true"
                                    growingThreshold="10"
                                    growingScrollToLoad="true"
                                    width="auto"
                                >
                                    <columns>
                                        <Column width="15%">
                                            <Text
                                                text="User"
                                                class="tblHeader"
                                            />
                                        </Column>
                                        <Column width="15%">
                                            <Text
                                                text="Date and Time"
                                                class="tblHeader"
                                            />
                                        </Column>
                                        <Column width="15%">
                                            <Text
                                                text="Status"
                                                class="tblHeader"
                                            />
                                        </Column>
                                        <Column
                                            minScreenWidth="Tablet"
                                            demandPopin="true"
                                        >
                                            <Text
                                                text="Approval Comments"
                                                class="tblHeader"
                                            />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem press="onEdit">
                                            <cells>
                                                <Text text="{UserName}" />
                                                <Text
                                                    text="{POApprovalDate} {POApprovalTime}"
                                                />
                                                <Text text="{POStatus}" />
                                                <Text text="{POComment}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </IconTabFilter>
                            <IconTabFilter
                                text="General"
                                key="General"
                                icon="sap-icon://message-information"
                            >
                                <l:Grid
                                    class="sapUiSmallMarginTop"
                                    width="auto"
                                    position="Center"
                                    containerQuery="true"
                                    vSpacing="2"
                                    defaultSpan="XL2 L4"
                                >
                                    <l:content>
                                        <VBox>
                                            <f:SimpleForm
                                                id="SimpleFormChange354wide1"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="3"
                                                width="800px"
                                                labelSpanM="4"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="4"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="2"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Text
                                                        id="txtPONO"
                                                        visible="false"
                                                    />
                                                    <Label
                                                        text="PO No / Chg No"
                                                        id="lblPUrOrNo"
                                                    />
                                                    <Text id="PurOrdNo" />
                                                    <Label
                                                        text="PO Description"
                                                    />
                                                    <Text id="PurOrdDesc" />
                                                    <Label
                                                        text="PO/AMND Initiator"
                                                    />
                                                    <Text id="PurOrdInt" />
                                                    <Label text="Vendor Name" />
                                                    <Text id="PurOrdVendor" />
                                                    <Label text="CN Date" />
                                                    <Text id="idCnDate" />
                                                </f:content>
                                            </f:SimpleForm>
                                            <layoutData>
                                                <l:GridData
                                                    span="XL2 L4"
                                                    linebreakL="false"
                                                    linebreakM="false"
                                                    linebreakS="false"
                                                />
                                            </layoutData>
                                        </VBox>
                                        <VBox>
                                            <f:SimpleForm
                                                id="SimpleFormChange354wide"
                                                editable="false"
                                                layout="ResponsiveGridLayout"
                                                labelSpanXL="4"
                                                labelSpanL="3"
                                                width="800px"
                                                labelSpanM="4"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                emptySpanXL="0"
                                                emptySpanL="4"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsXL="2"
                                                columnsL="2"
                                                columnsM="2"
                                                singleContainerFullSize="false"
                                            >
                                                <f:content>
                                                    <Label text="Plant Name" />
                                                    <Text id="idPlant" />
                                                    <Label
                                                        text="Document Type"
                                                    />
                                                    <Text id="PurDocType" />
                                                    <Label text="PO Date" />
                                                    <Text id="PurOrdDt" />
                                                    <Label
                                                        text="PO/AMND Status"
                                                    />
                                                    <Text id="PurOrdSts" />
                                                </f:content>
                                            </f:SimpleForm>
                                        </VBox>
                                    </l:content>
                                </l:Grid>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
                <footer>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button
                            text="Query"
                            id="btnQuery"
                            enabled="true"
                            icon="sap-icon://sys-help"
                            type="Emphasized"
                            press="handleSelectDialogPress"
                        />
                        <Button
                            text="Verified"
                            visible="true"
                            enabled="true"
                            id="btnReview"
                            type="Emphasized"
                            press="handleDialogPressReview"
                        />
                        <Button
                            text="Approve"
                            enabled="true"
                            id="btnApprove"
                            icon="sap-icon://accept"
                            press="SelectDialogPressApprove"
                            type="Accept"
                        />
                        <Button
                            text="PO Release"
                            visible="false"
                            id="btnApproveRelese"
                            icon="sap-icon://accept"
                            press="SelectDialogPressPORelease"
                            type="Accept"
                        />
                        <Button
                            text="Reject"
                            class="rejetbtn"
                            enabled="true"
                            id="btnReject"
                            icon="sap-icon://decline"
                            press="SelectDialogPressReject"
                            type="Reject"
                        />
                    </OverflowToolbar>
                </footer>
            </Page>
        </pages>
    </App>
</mvc:View>
